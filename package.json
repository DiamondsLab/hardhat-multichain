{
  "name": "hardhat-multichain",
  "version": "1.0.4",
  "description": "A Hardhat plugin for launching multiple forked blockchains",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/diamondslab/hardhat-multichain.git"
  },
  "homepage": "https://github.com/diamondslab/hardhat-multichain#readme",
  "bugs": {
    "url": "https://github.com/diamondslab/hardhat-multichain/issues"
  },
  "keywords": [
    "ethereum",
    "hardhat",
    "blockchain",
    "multichain",
    "crosschain"
  ],
  "author": "Am0rfu5",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint 'src/**/*.ts' 'test/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' 'test/**/*.ts' --fix",
    "format": "prettier --write 'src/**/*.{js,ts}' 'test/**/*.{js,ts}'",
    "format:check": "prettier --check 'src/**/*.{js,ts}' 'test/**/*.{js,ts}'",
    "prepublishOnly": "npm run clean && npm run build && npm run test",
    "clean": "rm -rf dist coverage .nyc_output",
    "prepare": "npm run build",
    "prepack": "npm run build"
  },
  "files": [
    "dist/",
    "LICENSE",
    "README.md"
  ],
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@ethersproject/providers": "^5.5.4",
    "@types/chai": "^4.1.7",
    "@types/estree": "^1.0.8",
    "@types/fs-extra": "^5.0.4",
    "@types/jest": "^30.0.0",
    "@types/json-schema": "^7.0.15",
    "@types/mocha": "^5.2.6",
    "@types/node": "^8.10.38",
    "@types/sinon": "^17.0.3",
    "@typescript-eslint/parser": "^8.18.1",
    "chai": "^4.2.0",
    "concurrently": "^9.1.2",
    "dotenv": "^16.4.7",
    "eslint": "^9.30.1",
    "ethers": "^6.15.0",
    "globals": "^16.3.0",
    "hardhat": "^2.22.1",
    "jest": "^30.0.4",
    "mocha": "^7.1.2",
    "nyc": "^15.1.0",
    "prettier": "2.0.5",
    "sinon": "^19.0.2",
    "ts-jest": "^29.4.0",
    "ts-node": "^8.1.0",
    "typescript": "^4.0.3",
    "typescript-eslint": "^8.35.1"
  },
  "peerDependencies": {
    "ethers": "^6.0.0",
    "hardhat": "^2.22.1"
  },
  "dependencies": {
    "winston": "^3.8.0"
  },
  "packageManager": "yarn@4.10.3"
}
